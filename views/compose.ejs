<%- include('partials/header') %>

<section class="userArticle-heading">
  <div class="heading-container">
    <h1 class="heading-featured">Featured</h1>
    <h1 class="heading-big">Write article</h1>
    <p class="heading-sub">
      write the details below and click publish once done, but please check
      content once again
    </p>
  </div>
</section>

<section class="form-control">
  <form class="form-container" action="/compose" method="post" enctype="multipart/form-data">
    <h1 class="form-heading">Publish article by Submitting the form below</h1>
    <div class="form-UserName">
      <div class="form-group">
        <label for="fname" class="form-label">First Name</label>
        <input
          type="text"
          class="form-input"
          placeholder="Your First Name"
          name="fname"
          id="fname"
        />
      </div>
      <div class="form-group pad-left">
        <label for="lname" class="form-label">Last Name</label>
        <input
          type="text"
          class="form-input"
          placeholder="Your Last Name"
          name="lname"
          id="lname"
        />
      </div>
    </div>
    <div class="form-group form-headline">
      <label for="heading" class="form-label">Headline</label>
      <input
        type="text"
        class="form-input"
        placeholder="Give a Cachy Headline"
        name="heading"
        id="heading"
      />
    </div>
    <div class="form-group form-headline">
      <label for="subheading" class="form-label">Headline</label>
      <input
        type="text"
        class="form-input"
        placeholder="Give a some subheading"
        name="subheading"
        id="subheading"
      />
    </div>
    <div class="upload__box form-group">
      <div class="upload__btn-box">
        <label class="upload__btn" for ="image">
          <p>Upload header image</p>
          <input
            type="file"
            data-max_length="1"
            class="upload__inputfile"
            name="image"
            id="image"
            value=""
            required
          />
        </label>
      </div>
      <div class="upload__img-wrap"></div>
    </div>


    <div class="form-group form-marked">
      <h1>Write your Article</h1>
      <textarea
        class="form-marked-text"
        name="markdown"
        id="markdown"
        cols="30"
        rows="10"
        placeholder="Use '#' before the start of heading ,   Use '[]'' to mention images/urls  "
      ></textarea>
    </div>
    <div class="form-submit-container">
      <button class="form-submit" type="submit">Publish</button>
    </div>
  </form>
</section>

<%- include('partials/footer') %>
